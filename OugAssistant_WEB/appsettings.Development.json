    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        },
        "NLog": {
            "IncludeScopes": true,
            "RemoveLoggerFactoryFilter": true
        }
    },
    "NLog": {
        "throwConfigExceptions": true,
        "autoReload": true,
        "internalLogLevel": "Warn",
        "internalLogFile": "internal-nlog.txt",
        "targets": {
            "file": {
                "type": "File",
                "fileName": "logs/app-${shortdate}.log",
                "layout": "${longdate} ${uppercase:${level}} ${logger} ${message} ${exception:format=ToString}"
            },
            "console": {
                "type": "Console"
            },
            "ougAssistantLogsFile": {
                "type": "File",
                "fileName": "logs/myapp-${shortdate}.log",
                "layout": "${longdate} ${uppercase:${level}} ${logger} ${message} ${exception:format=ToString}"
            }
        },
        "rules": [
            {
                "logger": "OugAssistant_WEB.*",
                "minLevel": "Trace",
                "writeTo": "ougAssistantLogsFile"
            },
            {
                "logger": "*",
                "minLevel": "Trace",
                "writeTo": "console,file"
            }
        ]
    }
